<Window x:Class="OriDE.RandoStatsCollector.GUI.BaseGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OriDE.RandoStatsCollector.GUI"
        mc:Ignorable="d"
        Title="Ori Rando Stats Parser" 
        Height="180" 
        Width="250"
        ResizeMode="NoResize"
        Style="{StaticResource DarkModeWindow}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Name="addRunButton" Width="150" Height="40" Click="AddRunButton_OnClick" Style="{StaticResource DarkModeButton}">Add a clear</Button>
        <Button Grid.Row="1" Name="checkStatsButton" Width="150" Height="40" Style="{StaticResource DarkModeButton}"> Check clear stats</Button>
    </Grid>
</Window>